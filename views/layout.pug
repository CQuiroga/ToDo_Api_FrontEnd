doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title ToDo App
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css")
  body(data-api-url=apiUrl)
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      .container
        a.navbar-brand(href="#") ToDo App
        .d-flex
          if isAuthenticated
            button#btnLogout.btn.btn-outline-light(type="button") Cerrar sesión
          else
            button.btn.btn-light.me-2(type="button" data-bs-toggle="modal" data-bs-target="#loginModal") Iniciar Sesión
            button.btn.btn-success(type="button" data-bs-toggle="modal" data-bs-target="#registerModal") Registrarse
    
    .container.mt-4
      #alertaContainer
      block content
    
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
    script(src="/js/app.js")